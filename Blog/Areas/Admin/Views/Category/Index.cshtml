@model List<CoreLayer.DTOs.Category.CategoryDto>
@{ 
    ViewData["Title"] = "دسته بندی ها";
    var counter = 1;
}
<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Category" asp-area="Admin"><i class="fa fa-dashboard"></i> خانه</a></li>
        
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<section class="content">
    <a class="btn btn-success" style="margin-bottom:5px" asp-area="Admin" asp-controller="Category" asp-action="Add">افزودن گروه جدید</a>
    <div class="box box-primary">
        <div class="box box-body p-2">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عنوان</th>
                        <th>زیر گروه</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@item.Title</td>
                            <td></td>
                            <td>
                                <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm ">ویرایش</a>
                                <a asp-area="Admin" asp-controller="Category" asp-action="" asp-route-id="@item.Id" class="btn btn-info btn-sm ">ثبت زیر گروه</a>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>

    </div>
</section>