@page
@model Blog.Pages.Login.RegisterModel
@{
    Layout = "Shared/_LoginLayout";
    ViewData["Title"] = "ثبت نام";
}
<form method="post">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" asp-for="FullName" placeholder="نام و نام خانوادگی" required="" id="username" />
        <span asp-validation-for="FullName" style="color:red"></span>
    </div>
    <div>
        <input type="text" asp-for="UserName" placeholder="نام کاربری" required="" id="username" />
        <span asp-validation-for="UserName" style="color:red"></span>
    </div>
    <div>
        <input type="password" asp-for="Password" placeholder="کلمه عبور" required="" id="password" />
        <span asp-validation-for="Password" style="color:red"></span>
    </div>
    <div>
        <input type="submit" value="ثبت نام" />
        @*<a href="#">فراموشی کلمه عبور</a>*@
        <a asp-page="Login">ورود به سایت</a>
    </div>
</form>

